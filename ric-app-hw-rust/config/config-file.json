{
    "name": "hw-rust",
    "version": "0.2.0",
    "containers": [
        {
            "name": "hw-rust",
            "image": {
                "registry": "nexus3.o-ran-sc.org:10002",
                "name": "o-ran-sc/ric-app-hw-rust",
                "tag": "0.2.0"
            }
        }
    ],
    "livenessProbe": {
        "httpGet": {
            "path": "ric/v1/health/alive",
            "port": 8080
        },
        "initialDelaySeconds": 5,
        "periodSeconds": 15
    },
    "readinessProbe": {
        "httpGet": {
            "path": "ric/v1/health/ready",
            "port": 8080
        },
        "initialDelaySeconds": 5,
        "periodSeconds": 15
    },
    "messaging": {
        "ports": [
            {
                "name": "http",
                "container": "hw-rust",
                "port": 8080,
                "description": "http service"
            },
            {
                "name": "rmrroute",
                "container": "hw-rust",
                "port": 4561,
                "description": "rmr route port for hw-rust xapp"
            },
            {
                "name": "rmrdata",
                "container": "hw-rust",
                "port": 4560,
                "rxMessages": ["RIC_SUB_RESP", "RIC_HEALTH_CHECK_REQ", "RIC_INDICATION"],
                "txMessages": ["RIC_SUB_REQ", "RIC_HEALTH_CHECK_RESP"],
                "mtypes" : [
                        {"name":"TESTNAME1","id":55555},
                        {"name":"TESTNAME2","id":55556}
                ],
                "policies": [1],
                "description": "rmr data port for hw-rust"
            }
        ]
    },
    "controls": {
           "fileStrorage": false,
           "logger": {
                   "level": 3
           }
    },
    "db" : {
            "waitForSdl": false
    }
}
